<h1>Eat the Burger</h1>

<h2>Burgers desired</h2>
<div class="burgers-added">
{{#each burgers}}
    {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
    {{/unless}}
{{/each}}
</div>

<h2>Burgers eaten</h2>
<div class="burgers-eaten">
{{#each burgers}}
    {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
    {{/if}}
{{/each}}
</div>

<form class="create-form">
    <div class="form-group">
       <label for="inputBurger">Enter a Burger: </label> 
       <input type= "text" name="name">
    </div>

    <button type="submit" id="add-burger">Add Burger</button> 
</form>